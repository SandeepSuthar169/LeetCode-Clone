generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("NEON_URL")
  directUrl = env("DIRECT_URL")
}

enum UserRole {
  ADMIN
  USER
}

model User {
  id                  String   @id @default(cuid())
  name                String
  email               String   @unique
  image               String?
  password            String
  role                UserRole @default(USER)
  createAt            DateTime @default(now())
  updateAt            DateTime @updatedAt
}
